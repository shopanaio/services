{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start All Dev Services",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Start Infrastructure",
        "Start Platform Service",
        "Start Orchestrator"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      }
    },
    {
      "label": "Start Infrastructure",
      "type": "shell",
      "command": "make infra-up",
      "options": {
        "cwd": "${workspaceFolder}",
        "shell": {
          "executable": "/bin/zsh",
          "args": ["-c"]
        }
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "Start Platform Service",
      "type": "shell",
      "command": "cd platform && echo 'Starting Platform Service...' && make start",
      "options": {
        "cwd": "${workspaceFolder}",
        "shell": {
          "executable": "/bin/zsh",
          "args": ["-c"]
        }
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting Platform Service",
          "endsPattern": "starting HTTP server|Fiber v2"
        }
      }
    },
    {
      "label": "Start Orchestrator",
      "type": "shell",
      "command": "source ~/.nvm/nvm.sh && nvm use 22 && echo 'Starting Orchestrator with all services...' && make dev:orchestrator",
      "options": {
        "cwd": "${workspaceFolder}",
        "shell": {
          "executable": "/bin/zsh",
          "args": ["-c"]
        }
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting Orchestrator",
          "endsPattern": "Service Orchestrator started successfully|ServiceBroker.*started successfully"
        }
      }
    },
    {
      "label": "Stop All Services",
      "type": "shell",
      "command": "make down",
      "options": {
        "cwd": "${workspaceFolder}",
        "shell": {
          "executable": "/bin/zsh",
          "args": ["-c"]
        }
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "Claude (Skip Permissions)",
      "type": "shell",
      "command": "claude --dangerously-skip-permissions",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": false
      },
      "options": {
        "cwd": "${workspaceFolder}",
        "shell": {
          "executable": "/bin/zsh",
          "args": ["-c"]
        }
      },
      "isBackground": true,
      "problemMatcher": []
    }
  ]
}
