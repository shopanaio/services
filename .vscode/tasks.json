{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start All Dev Services",
      "dependsOrder": "parallel",
      "dependsOn": [
        "Start Core Service",
        "Start Checkout Service",
        "Start Apps Service",
        "Start Orders Service",
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      }
    },
    {
      "label": "Start Core Service",
      "type": "shell",
      "command": "cd platform && echo 'Starting Core Service...' && make start",
      "options": {
        "cwd": "${workspaceFolder}",
        "shell": {
          "executable": "/bin/zsh",
          "args": ["-c"]
        }
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Start Checkout Service",
      "type": "shell",
      "command": "source ~/.nvm/nvm.sh && nvm use 22 && cd services/checkout && echo 'Starting Checkout Service...' && yarn dev:watch",
      "options": {
        "cwd": "${workspaceFolder}",
        "shell": {
          "executable": "/bin/zsh",
          "args": ["-c"]
        }
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Start Apps Service",
      "type": "shell",
      "command": "source ~/.nvm/nvm.sh && nvm use 22 && cd services/apps && echo 'Starting Apps Service...' && yarn dev:watch",
      "options": {
        "cwd": "${workspaceFolder}",
        "shell": {
          "executable": "/bin/zsh",
          "args": ["-c"]
        }
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Start Orders Service",
      "type": "shell",
      "command": "source ~/.nvm/nvm.sh && nvm use 22 && cd services/orders && echo 'Starting Orders Service...' && yarn dev:watch",
      "options": {
        "cwd": "${workspaceFolder}",
        "shell": {
          "executable": "/bin/zsh",
          "args": ["-c"]
        }
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      },
      "isBackground": true,
      "problemMatcher": []
    },
  ]
}
