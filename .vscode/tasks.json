{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start All Dev Services",
      "dependsOrder": "parallel",
      "dependsOn": [
        "Start Checkout Service",
        "Start Apps Service",
        "Start Inventory Service",
        "Start Pricing Service",
        "Start Shipping Service",
        "Start Platform Service"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      }
    },
    {
      "label": "Start Checkout Service",
      "type": "shell",
      "command": "source ~/.nvm/nvm.sh && nvm use 22 && cd services/checkout && echo 'Starting Checkout Service...' && yarn dev:watch",
      "options": {
        "cwd": "${workspaceFolder}",
        "shell": {
          "executable": "/bin/zsh",
          "args": ["-c"]
        }
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      },
      "isBackground": true,
      "problemMatcher": []
    },
