# NATS Configuration Environment Variables
# Generated by Ansible

# Environment
NATS_ENV={{ nats_env }}

# Server configuration
NATS_SERVER_NAME={{ nats_server_name }}

# Basic authentication
NATS_USER={{ nats_user }}
NATS_PASSWORD={{ nats_password }}

# Admin user (for system account)
NATS_ADMIN_PASSWORD={{ nats_admin_password }}

# Cluster authentication (for multi-node setup)
NATS_CLUSTER_USER={{ nats_cluster_user }}
NATS_CLUSTER_PASSWORD={{ nats_cluster_password }}

# Leafnode authentication (for hybrid cloud setup)
NATS_LEAFNODE_USER={{ nats_leafnode_user }}
NATS_LEAFNODE_PASSWORD={{ nats_leafnode_password }}
