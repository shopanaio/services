server:
  http_listen_port: 9080
  grpc_listen_port: 0
  log_level: info

positions:
  filename: /tmp/positions/positions.yaml

clients:
  - url: http://loki:3100/loki/api/v1/push
    timeout: 10s
    backoff_config:
      min_period: 500ms
      max_period: 5m
      max_retries: 10

scrape_configs:
  # Docker container logs
  - job_name: docker
    docker_sd_configs:
      - host: unix:///var/run/docker.sock
        refresh_interval: 5s
    relabel_configs:
      # Container name
      - source_labels: ['__meta_docker_container_name']
        regex: '/(.*)'
        target_label: 'container_name'

      # Container ID
      - source_labels: ['__meta_docker_container_id']
        target_label: 'container_id'

      # Container log path
      - source_labels: ['__meta_docker_container_id']
        target_label: '__path__'
        replacement: '/var/lib/docker/containers/$1/*-json.log'

      # Docker compose project
      - source_labels: ['__meta_docker_container_label_com_docker_compose_project']
        target_label: 'compose_project'

      # Docker compose service
      - source_labels: ['__meta_docker_container_label_com_docker_compose_service']
        target_label: 'compose_service'

      # Container image
      - source_labels: ['__meta_docker_container_label_image']
        target_label: 'image'

      # Network mode
      - source_labels: ['__meta_docker_container_network_mode']
        target_label: 'network_mode'

      # Environment
      - replacement: '{{ monitoring_env }}'
        target_label: 'environment'

    pipeline_stages:
      # Parse Docker JSON logs
      - json:
          expressions:
            output: log
            stream: stream
            time: time

      # Parse timestamp
      - timestamp:
          source: time
          format: RFC3339Nano

      # Extract log level from log content (common patterns)
      - regex:
          expression: '(?i)(?P<level>ERROR|WARN|WARNING|INFO|DEBUG|TRACE|FATAL|PANIC)'
          source: output

      # Set log level label
      - labels:
          level:
          stream:

      # Output the log content
      - output:
          source: output

  # System logs (optional)
  - job_name: system
    static_configs:
      - targets:
          - localhost
        labels:
          job: varlogs
          environment: {{ monitoring_env }}
          __path__: /var/log/*.log

limits_config:
  readline_rate_enabled: true
  readline_rate: 10000
  readline_burst: 20000
