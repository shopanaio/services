supergraph:
  path: /api/admin/graphql/query
  introspection: true
  listen: 0.0.0.0:{{ apollo_router_admin_port }}

homepage:
  enabled: true

include_subgraph_errors:
  all: true

cors:
  allow_any_origin: true

headers:
  all:
    request:
      - propagate:
          matching: ".*"

health_check:
  listen: 0.0.0.0:{{ apollo_router_admin_health_port }}
