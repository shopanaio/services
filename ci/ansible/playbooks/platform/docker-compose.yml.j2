services:
  platform:
    image: {{ shopana_ghcr_registry }}/{{ shopana_ghcr_owner }}/platform:${PLATFORM_TAG:-latest}
    container_name: platform
    restart: unless-stopped
    ports:
      - "0.0.0.0:{{ platform_port }}:{{ platform_port }}"
    secrets:
      - source: platform_env
        target: /.env
    environment:
      - PORT={{ platform_port }}
    healthcheck:
      test: ["CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://localhost:{{ platform_port }}/healthz"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s
    networks:
      - shopana-network
    labels:
      - "traefik.enable=true"
      # REST API endpoints (file upload, tenant management)
      - "traefik.http.routers.platform.rule=PathPrefix(`/api/admin/v1`)"
      - "traefik.http.routers.platform.entrypoints=web"
      - "traefik.http.routers.platform.priority=10"
      # Service definition
      - "traefik.http.services.platform.loadbalancer.server.port={{ platform_port }}"

secrets:
  platform_env:
    file: ./.env

networks:
  shopana-network:
    name: shopana-network
    external: true
