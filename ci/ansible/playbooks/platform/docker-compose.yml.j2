services:
  platform:
    image: {{ shopana_ghcr_registry }}/{{ shopana_ghcr_owner }}/platform:${PLATFORM_TAG:-latest}
    container_name: platform
    restart: unless-stopped
    ports:
      - "0.0.0.0:{{ platform_port }}:{{ platform_port }}"
    secrets:
      - source: platform_env
        target: /.env
    environment:
      - PORT={{ platform_port }}
    healthcheck:
      test: ["CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://localhost:{{ platform_port }}/healthz"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s

secrets:
  platform_env:
    file: ./.env
