{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@shopana/plugin-sdk": ["../plugin-sdk/dist"],
      "@shopana/plugin-sdk/*": ["../plugin-sdk/dist/*"]
    }
  },
  "include": ["src"]
}
