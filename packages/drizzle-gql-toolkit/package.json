{
  "name": "@shopana/drizzle-gql-toolkit",
  "version": "0.1.0",
  "type": "module",
  "description": "Type-safe query builder for Drizzle ORM with GraphQL-style filtering, automatic joins, and nested paths",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./cursor": {
      "types": "./dist/cursor/index.d.ts",
      "import": "./dist/cursor/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "drizzle",
    "drizzle-orm",
    "orm",
    "graphql",
    "query-builder",
    "filtering",
    "sql",
    "typescript",
    "type-safe",
    "joins",
    "pagination"
  ],
  "author": "Shopana.io",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shopanaio/services.git",
    "directory": "packages/drizzle-gql-toolkit"
  },
  "homepage": "https://github.com/shopanaio/services/tree/main/packages/drizzle-gql-toolkit#readme",
  "bugs": {
    "url": "https://github.com/shopanaio/services/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "drizzle-orm": ">=0.30.0"
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.2.15",
    "@types/node": "^20.12.7",
    "drizzle-kit": "^0.31.0",
    "drizzle-orm": "^0.44.0",
    "typescript": "^5.4.5",
    "vitest": "^2.1.8"
  }
}
