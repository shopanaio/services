services:
  platform:
    image: {{ shopana_ghcr_registry }}/{{ shopana_ghcr_owner }}/platform:${PLATFORM_TAG:-latest}
    container_name: platform
    restart: unless-stopped
    ports:
      - "0.0.0.0:{{ platform_port }}:{{ platform_port }}"
      - "0.0.0.0:{{ platform_grpc_port }}:{{ platform_grpc_port }}"
    secrets:
      - source: platform_env
        target: /.env
    environment:
      - PORT={{ platform_port }}
      - GRPC_PORT={{ platform_grpc_port }}
      - GRPC_REQUEST_TIMEOUT={{ platform_grpc_request_timeout }}
      - GRPC_RATE_LIMIT={{ platform_grpc_rate_limit }}
      - GRPC_TLS_CERT_FILE={{ platform_grpc_tls_cert_file }}
      - GRPC_TLS_KEY_FILE={{ platform_grpc_tls_key_file }}
    networks:
      - shopana-network
    labels:
      # Traefik configuration
      - "traefik.enable=true"
      # REST API endpoints (file upload, tenant management) - more specific route
      - "traefik.http.routers.platform.rule=PathPrefix(`/api/admin/v1`)"
      - "traefik.http.routers.platform.entrypoints=web"
      - "traefik.http.routers.platform.priority=1000"
      - "traefik.http.routers.platform.service=platform"
      # Service definition
      - "traefik.http.services.platform.loadbalancer.server.port={{ platform_port }}"

secrets:
  platform_env:
    file: ./.env

networks:
  shopana-network:
    name: shopana-network
    external: true
