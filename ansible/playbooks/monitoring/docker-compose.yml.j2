services:
  # Grafana - visualization and dashboards
  grafana:
    image: grafana/grafana:{{ grafana_version }}
    container_name: shopana-grafana
    restart: unless-stopped
    ports:
      - "0.0.0.0:{{ grafana_port }}:3000"
    environment:
      - GF_SECURITY_ADMIN_USER={{ grafana_admin_user }}
      - GF_SECURITY_ADMIN_PASSWORD={{ grafana_admin_password }}
      - GF_INSTALL_PLUGINS=
      - GF_SECURITY_ALLOW_EMBEDDING={{ grafana_allow_embedding }}
      - GF_AUTH_ANONYMOUS_ENABLED={{ grafana_enable_anonymous }}
      - GF_PATHS_PROVISIONING=/etc/grafana/provisioning
      - TZ={{ monitoring_timezone }}
    volumes:
      - grafana-data:/var/lib/grafana
      - ./config/grafana/provisioning:/etc/grafana/provisioning:ro
    networks:
      - {{ monitoring_network }}
    depends_on:
      - prometheus
      - loki
    healthcheck:
      test: ["CMD-SHELL", "wget --no-verbose --tries=1 --spider http://localhost:3000/api/health || exit 1"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 30s

  # Prometheus - metrics collection and storage
  prometheus:
    image: prom/prometheus:{{ prometheus_version }}
    container_name: shopana-prometheus
    restart: unless-stopped
    ports:
      - "0.0.0.0:{{ prometheus_port }}:9090"
    command:
      - '--config.file=/etc/prometheus/prometheus.yml'
      - '--storage.tsdb.path=/prometheus'
      - '--storage.tsdb.retention.time={{ prometheus_retention_time }}'
      - '--storage.tsdb.retention.size={{ prometheus_retention_size }}'
      - '--web.console.libraries=/etc/prometheus/console_libraries'
      - '--web.console.templates=/etc/prometheus/consoles'
      - '--web.enable-lifecycle'
    volumes:
      - ./config/prometheus/prometheus.yml:/etc/prometheus/prometheus.yml:ro
      - prometheus-data:/prometheus
    networks:
      - {{ monitoring_network }}
    healthcheck:
      test: ["CMD", "wget", "--tries=1", "--spider", "http://localhost:9090/-/healthy"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 30s

  # Loki - log aggregation system
  loki:
    image: grafana/loki:{{ loki_version }}
    container_name: shopana-loki
    restart: unless-stopped
    ports:
      - "0.0.0.0:{{ loki_port }}:3100"
    command: -config.file=/etc/loki/local-config.yaml
    volumes:
      - ./config/loki/loki-config.yaml:/etc/loki/local-config.yaml:ro
      - loki-data:/loki
    networks:
      - {{ monitoring_network }}
    healthcheck:
      test: ["CMD-SHELL", "wget --no-verbose --tries=1 --spider http://localhost:3100/ready || exit 1"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 30s

  # Promtail - log collector for Loki
  promtail:
    image: grafana/promtail:{{ promtail_version }}
    container_name: shopana-promtail
    restart: unless-stopped
    ports:
      - "0.0.0.0:{{ promtail_port }}:9080"
    command: -config.file=/etc/promtail/config.yml
    volumes:
      - ./config/promtail/promtail-config.yaml:/etc/promtail/config.yml:ro
      - /var/lib/docker/containers:/var/lib/docker/containers:ro
      - /var/run/docker.sock:/var/run/docker.sock:ro
      - promtail-positions:/tmp/positions
    networks:
      - {{ monitoring_network }}
    depends_on:
      - loki

  # cAdvisor - container metrics
  cadvisor:
    image: gcr.io/cadvisor/cadvisor:v0.49.1
    container_name: shopana-cadvisor
    restart: unless-stopped
    ports:
      - "0.0.0.0:8081:8080"
    volumes:
      - /:/rootfs:ro
      - /var/run:/var/run:ro
      - /sys:/sys:ro
      - /var/lib/docker:/var/lib/docker:ro
      - /dev/disk:/dev/disk:ro
    privileged: true
    devices:
      - /dev/kmsg
    networks:
      - {{ monitoring_network }}

  # Node Exporter - host metrics
  node-exporter:
    image: prom/node-exporter:v1.8.0
    container_name: shopana-node-exporter
    restart: unless-stopped
    ports:
      - "0.0.0.0:9100:9100"
    command:
      - '--path.procfs=/host/proc'
      - '--path.rootfs=/rootfs'
      - '--path.sysfs=/host/sys'
      - '--collector.filesystem.mount-points-exclude=^/(sys|proc|dev|host|etc)($$|/)'
    volumes:
      - /proc:/host/proc:ro
      - /sys:/host/sys:ro
      - /:/rootfs:ro
    networks:
      - {{ monitoring_network }}

volumes:
  grafana-data:
    name: shopana-grafana-data
  prometheus-data:
    name: shopana-prometheus-data
  loki-data:
    name: shopana-loki-data
  promtail-positions:
    name: shopana-promtail-positions

networks:
  {{ monitoring_network }}:
    name: {{ monitoring_network }}
    external: true
