# Service Configuration for {{ service_name }}
NODE_ENV={{ service_env | default('production') }}
PORT={{ service_port }}
DATABASE_URL={{ service_database_url }}
LOG_LEVEL={{ service_log_level | default('info') }}

# Moleculer Configuration
MOLECULER_TRANSPORTER={{ moleculer_transporter | default('nats://nats:4222') }}

# NATS Configuration (if using NATS transporter)
NATS_URL={{ nats_url | default('nats://nats:4222') }}

# Platform API Configuration (for platform service)
{% if service_name == 'platform' %}
PLATFORM_INVENTORY_GRAPHQL_URL={{ PLATFORM_INVENTORY_GRAPHQL_URL | default('http://platform:8000/api/admin/graphql') }}
{% endif %}
