# Orchestrator Configuration
# This file is generated by Ansible for orchestrator service
# Multiple services run in a single process with in-memory communication

orchestrator:
  mode: orchestrator
  services:
    - apps
    - platform
    - payments
    - inventory
    - delivery

services:
  apps:
    port: {{ apps_port }}
    database_url: "{{ apps_database_url }}"

  platform:
    port: {{ platform_port }}
    database_url: "{{ platform_database_url }}"

  payments:
    port: {{ payments_port }}
    database_url: "{{ payments_database_url }}"

  inventory:
    port: {{ inventory_port }}
    database_url: "{{ inventory_database_url }}"

  delivery:
    port: {{ delivery_port }}
    database_url: "{{ delivery_database_url }}"
