services:
  {{ service_name }}:
    image: {{ shopana_ghcr_registry }}/{{ shopana_ghcr_owner }}/{{ service_name }}-service:{{ service_image_tag }}
    container_name: {{ service_name }}-service
    restart: unless-stopped
    ports:
      - "0.0.0.0:{{ service_port }}:{{ service_port }}"
    secrets:
      - source: service_config
        target: /app/config.yml
    healthcheck:
      test: ["CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://127.0.0.1:{{ service_port }}/healthz"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s
    networks:
      - shopana-network

secrets:
  service_config:
    file: ./config.yml

networks:
  shopana-network:
    name: shopana-network
    driver: bridge
    external: true
