services:
  {{ service_name }}:
    image: {{ shopana_ghcr_registry }}/{{ shopana_ghcr_owner }}/{{ service_name }}-service:{{ service_image_tag }}
    container_name: {{ service_name }}-service
    restart: unless-stopped
    ports:
      - "0.0.0.0:{{ service_port }}:{{ service_port }}"
    secrets:
      - source: service_config
        target: /app/config.yml
    networks:
      - shopana-network

secrets:
  service_config:
    file: ./config.yml

networks:
  shopana-network:
    name: shopana-network
    driver: bridge
    external: true
