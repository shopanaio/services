# Environment variables for Orchestrator Service
# Generated by Ansible

# Runtime mode
NODE_ENV={{ service_env | default('production') }}
SERVICES_MODE=orchestrator
LOG_LEVEL={{ service_log_level | default('info') }}

# Moleculer & NATS configuration
# Used for communication with standalone services (checkout, orders)
MOLECULER_TRANSPORTER={{ moleculer_transporter | default('nats://nats:4222') }}
NATS_URL={{ nats_url | default('nats://nats:4222') }}

# Port configuration
PORT={{ orchestrator_port }}

# Database URLs for orchestrator services
APPS_DATABASE_URL={{ apps_database_url }}
PAYMENTS_DATABASE_URL={{ payments_database_url }}
INVENTORY_DATABASE_URL={{ inventory_database_url }}
DELIVERY_DATABASE_URL={{ delivery_database_url }}
PRICING_DATABASE_URL={{ pricing_database_url }}
