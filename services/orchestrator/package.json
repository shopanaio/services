{
  "name": "@shopana/orchestrator-service",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "description": "Service orchestrator for running multiple services in a single process",
  "scripts": {
    "dev": "node --loader ts-node/esm src/main.ts",
    "dev:legacy": "nodemon",
    "build": "nest build",
    "build:legacy": "node esbuild.js",
    "build:all": "yarn workspace @shopana/apps-service build && yarn workspace @shopana/payments-service build && yarn workspace @shopana/inventory-service build && yarn workspace @shopana/media-service build && yarn workspace @shopana/pricing-service build && yarn workspace @shopana/delivery-service build && yarn build",
    "start": "node dist/main.js",
    "start:dev": "nest start --debug --watch"
  },
  "dependencies": {
    "@golevelup/nestjs-rabbitmq": "^5.5.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-fastify": "^10.0.0",
    "@shopana/apps-service": "0.0.1",
    "@shopana/checkout-service": "0.0.1",
    "@shopana/delivery-service": "0.0.1",
    "@shopana/inventory-service": "0.0.1",
    "@shopana/media-service": "0.0.1",
    "@shopana/orders-service": "0.0.1",
    "@shopana/payments-service": "0.0.1",
    "@shopana/pricing-service": "0.0.1",
    "@shopana/shared-kernel": "1.0.0",
    "@shopana/shared-service-config": "0.0.1",
    "dotenv": "^16.4.5",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@shopana/build-tools": "0.0.1",
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.2",
    "@types/node": "^22.7.4",
    "esbuild": "^0.24.2",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4"
  }
}
