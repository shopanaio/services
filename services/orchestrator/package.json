{
  "name": "@shopana/orchestrator-service",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "description": "Service orchestrator for running multiple services in a single process",
  "scripts": {
    "dev": "tsx --tsconfig tsconfig.json src/nest-orchestrator.ts",
    "dev:watch": "tsx watch --tsconfig tsconfig.json src/nest-orchestrator.ts",
    "dev:moleculer": "tsx --tsconfig tsconfig.json src/index.ts",
    "build": "node esbuild.js",
    "build:all": "yarn workspace @shopana/apps-service build && yarn workspace @shopana/payments-service build && yarn workspace @shopana/inventory-service build && yarn workspace @shopana/pricing-service build && yarn workspace @shopana/delivery-service build && yarn build",
    "start": "node dist/src/nest-orchestrator.js",
    "start:moleculer": "node dist/src/index.js"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-fastify": "^10.0.0",
    "@shopana/shared-kernel": "1.0.0",
    "@shopana/shared-service-config": "0.0.1",
    "dotenv": "^16.4.5",
    "moleculer": "^0.14.35",
    "moleculer-repl": "^0.7.4",
    "nats": "^2.29.3",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@shopana/build-tools": "0.0.1",
    "@types/node": "^22.7.4",
    "esbuild": "^0.24.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4"
  }
}
