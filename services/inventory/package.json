    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@shopana/build-tools": "0.0.1",
    "@types/node": "^20.14.14",
    "esbuild": "^0.24.2",
    "jest": "^29.7.0",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4"
