{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@domain/*": ["src/domain/*"],
      "@shopana/platform-api/*": ["../../packages/platform-api/dist/*"],
      "@shopana/shared-service-api/*": [
        "../../packages/shared-service-api/dist/*"
      ],
      "@shopana/shared-money/*": ["../../packages/shared-money/dist/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src"]
}
