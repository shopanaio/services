{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@domain/*": ["src/domain/*"],
      "@shopana/platform-api": ["../../packages/platform-api/dist/index.d.ts"],
      "@shopana/platform-api/*": ["../../packages/platform-api/dist/*"],
      "@shopana/shared-service-api": ["../../packages/shared-service-api/dist/index.d.ts"],
      "@shopana/shared-service-api/*": ["../../packages/shared-service-api/dist/*"],
      "@shopana/shared-async-context": [
        "../../packages/shared-async-context/dist/index"
      ],
      "@shopana/shared-async-context/*": [
        "../../packages/shared-async-context/dist/*"
      ],
      "@shopana/shared-money": ["../../packages/shared-money/dist/index.d.ts"],
      "@shopana/shared-money/*": ["../../packages/shared-money/dist/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src"]
}
